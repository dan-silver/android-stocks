<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="15dp"
    android:background="@color/dark_background">

    <RelativeLayout
        android:layout_weight="4"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:text="Verizon Communications"
            android:id="@+id/stock_detail_company_name"
            android:textColor="@color/dark_background_text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:text="(VZ)"
            android:id="@+id/stock_detail_ticker"
            android:layout_toRightOf="@id/stock_detail_company_name"
            android:layout_alignBottom="@id/stock_detail_company_name"
            android:layout_marginLeft="10dp"
            android:textColor="@color/dark_background_text"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove"
            android:id="@+id/remove_stock"
            android:layout_below="@+id/stock_detail_ticker"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <LinearLayout
        android:layout_weight="2"
        android:orientation="vertical"
        android:id="@+id/graph"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"></LinearLayout>
    <LinearLayout
        android:layout_weight="4"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"></LinearLayout>

</LinearLayout>