<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#323232"
    android:padding="12dp">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/ic_action_settings"
        android:id="@+id/stock_settings"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="12dp"
        >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/primary_text_dark"
            android:text="Verizon Communications"
            android:id="@+id/companyName"
            android:layout_gravity="left"/>
        <TextView
            android:textColor="@android:color/primary_text_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="(VZ)"
            android:layout_toRightOf="@id/companyName"
            android:layout_alignBottom="@id/companyName"
            android:layout_marginLeft="10dp"
            android:id="@+id/symbol" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@android:color/primary_text_dark"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="49.18"
            android:textSize="28dp"
            android:id="@+id/lastPrice"
            />
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@android:color/primary_text_dark"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0.14"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/change"
            android:layout_toRightOf="@id/lastPrice"
            android:layout_alignBottom="@id/lastPrice"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0.29%"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/primary_text_dark"
            android:layout_toRightOf="@id/change"
            android:layout_alignBottom="@id/lastPrice"
            android:id="@+id/changePercent" />
    </RelativeLayout>
    </LinearLayout>
</LinearLayout>