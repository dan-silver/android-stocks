<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/stock_background_selected"
    android:padding="12dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="12dp"
        >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@drawable/stock_text_selector"
            android:text="Verizon Communications"
            android:id="@+id/companyName"
            android:layout_gravity="left"/>
        <TextView
            android:textColor="@drawable/stock_text_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="(VZ)"
            android:layout_toRightOf="@id/companyName"
            android:layout_alignBottom="@id/companyName"
            android:layout_marginLeft="5dp"
            android:id="@+id/symbol" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@drawable/stock_text_selector"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="49.18"
            android:textSize="23dp"
            android:id="@+id/lastPrice"
            />
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@drawable/stock_text_selector"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0.14"
            android:textSize="19sp"
            android:layout_marginLeft="10dp"
            android:id="@+id/change"
            android:layout_toRightOf="@id/lastPrice"
            android:layout_alignBottom="@id/lastPrice"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0.29%"
            android:textSize="19sp"
            android:layout_marginLeft="10dp"
            android:textColor="@drawable/stock_text_selector"
            android:layout_toRightOf="@id/change"
            android:layout_alignBottom="@id/lastPrice"
            android:id="@+id/changePercent" />
    </RelativeLayout>
    </LinearLayout>
</LinearLayout>